pipeline {
	agent {
		node {
			label "built-in"
				customWorkspace '/mnt/basic/'
		}
	}
	stages {
		stage ('create-folder') {
			steps {
				sh "mkdir India"
			}
		}
		stage ('create-file') {
			steps {
			        sh "cd /mnt/basic/India/"
				sh "echo 'hi i am rupesh' >> Manghate"
				sh "chmod 777 Manghate"
			}
		}
	}
}	
